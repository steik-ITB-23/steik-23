generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  name     String?
  username String? @unique
  email    String? @unique
  password String?
  IP       Float
}

model Academic {
  id        String     @id @default(cuid())
  semester  Int
  code      String
  lesson    String
  materials Material[]
  exercises Exercise[]
  tutorials Tutorial[]
}

// Materi
model Material {
  id         String   @id @default(cuid())
  academic   Academic @relation(fields: [academicId], references: [id])
  academicId String
  fileUrl    String
  fileType   String
}

// Bank Soal
model Exercise {
  id         String   @id @default(cuid())
  academic   Academic @relation(fields: [academicId], references: [id])
  academicId String
  fileUrl    String
  fileType   String
}

// Tutorial
model Tutorial {
  id         String   @id @default(cuid())
  academic   Academic @relation(fields: [academicId], references: [id])
  academicId String
  fileUrl    String
  fileType   String
}

// Acara
model Event {
  id       String @id @default(cuid())
  imageUrl String
  name     String
  type     String
  content  String
}

// Pengumuman PTPB
model PTPBAnnouncement {
  id       String @id @default(cuid())
  imageUrl String
  name     String
  type     String
  content  String
}

// Lab
model LabAnnouncement {
  id       String @id @default(cuid())
  imageUrl String
  name     String
  type     String
  content  String
}
